<configuration>

    <contextListener class="ch.qos.logback.classic.jul.LevelChangePropagator">
        <resetJUL>true</resetJUL>
    </contextListener>

    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <charset>UTF-8</charset>
            <pattern>%d{HH:mm:ss.SSS} %highlight(%-5level) %cyan(%class{50}.%M:%L) - %magenta(%msg%n)</pattern>
        </encoder>
    </appender>

    <appender name="duration" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <charset>UTF-8</charset>
            <pattern>%yellow(%msg%n)</pattern>
        </encoder>
    </appender>

    <appender name="durationTotal" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <charset>UTF-8</charset>
            <pattern>%red(%msg%n)</pattern>
        </encoder>
    </appender>

    <logger name="duration" level="INFO" additivity="false">
        <appender-ref ref="duration"/>
    </logger>
    <logger name="durationTotal" level="INFO" additivity="false">
        <appender-ref ref="durationTotal"/>
    </logger>

    <logger name="org.postgresql" level="debug"/>
    <logger name="org.springframework.jdbc" level="debug"/>
    <logger name="ru.javawebinar.topjava" level="debug"/>

    <root level="INFO">
        <appender-ref ref="console"/>
    </root>

</configuration>